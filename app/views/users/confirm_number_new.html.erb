<div class="col-md-6 col-md-offset-3">
  <div class="row">
    <% provide(:title, 'Sign up') %>
    <h1>Confirm your number</h1>
  </div>

  <div class="row">
      <%= form_tag(confirm_user_number_path) do |f| %>

        <%= label_tag :token %>
        <%= phone_field_tag :token, nil, class: 'form-control' %>

        <%= submit_tag "Confirm", class: "btn btn-primary" %>
      <% end %>
  </div>
</div>
