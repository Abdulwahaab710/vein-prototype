<div class="col-md-6 col-md-offset-3">
  <div class="row">
    <% provide(:title, 'Sign up') %>
    <h1>Update profile</h1>
  </div>

  <div class="row">
      <%= form_for(@user, url: complete_profile_path) do |f| %>
        <%= render 'shared/error_messages', obj: @user %>

        <%= f.label :address %>
        <%= f.text_field :address, class: 'form-control', required: true %>

        <%= f.label :city %>
        <%= f.text_field :city, class: 'form-control', required: true %>

        <%= f.label :country %>
        <%= f.text_field :country, class: 'form-control', required: true %>

        <%= f.label :blood_type %>
        <%= f.select :blood_type_id, options_for_select(
          @blood_types, @user&.blood_type&.id
        ), include_blank: true, required: true %>

        <%= f.submit 'Update', class: "btn btn-primary" %>
      <% end %>
  </div>
</div>
